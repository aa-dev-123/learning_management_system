<div class="max-w-sm bg-white overflow-hidden hover:bg-voodoo-100 border border-gray-200 rounded-sm shadow-lg">
  <%= link_to course, class: "flex flex-col h-full" do %>
    <% if course.image.present? %>
      <%= image_tag(course.image, class: "w-full") %>
    <% else %>
      <%= image_tag("https://placehold.co/300") %>
    <% end %>

    <div class="px-6 py-4 flex flex-col justify-between grow">
      <div>
        <div class="flex items-center justify-between font-bold text-xl mb-2">
          <%= course.title%>
        </div>
        <p class="text-sm  font-extralight"> Alishba Atther </p>
        <div class="flex items-center justify-between font-bold text-xl mb-2">
          <p class="text-md font-light"> Free </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
